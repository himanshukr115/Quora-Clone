<%- include('../partials/header'); -%>
<%- include('../components/navbar'); -%>

    

    <div class="card">
        <div class="card-header">
            <center><h2><%= post.title %></h2></center>
        </div>
        <div class="card-body">
          <blockquote class="blockquote mb-0">
            <p class="bg-light"><%= post.post %></p>
            <footer class="blockquote-footer">Someone famous in <cite title="Source Title">Source Title</cite></footer>
          </blockquote>
        </div>


        <div class="card-body">
            <a class="card-link btn btn-info" href="/show/<%= post._id %>/edit">Edit</a>
            <form class="d-inline" action="/show/<%= post._id %>?_method=DELETE" method="POST">
                <button class="btn btn-danger">Delete</button>
            </form>
        </div>


      </div>

      <form method="post" action="/show/<%= post._id %>/comment">
        <div class="mb-6">
            <label for="exampleFormControlTextarea1" class="form-label">Review</label>
            <textarea class="form-control" name="comment" id="exampleFormControlTextarea1" rows="3"></textarea>
        </div>
        <br>
        <button class="btn btn-success">Submit</button>
        
    </form>

<% for (let comment of post.comments) {%>

  <ul class="list-group">
 

    <li class="list-group-item list-group-item-primary"><%=  comment.comment %></li>
    <form method="post" action="/show/<%= post._id %>/comments/<%= comment._id %>?_method=DELETE">
      <button>Delete</button>
    </form>
  </ul>
  <br>
<%}%>


    

</body>
</html>




